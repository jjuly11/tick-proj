mixin ticket(event={}) 
    .ticket
        .ticket_img 
            a(href=`/all/${event._id}`)
                img.w-100(src=`http://res.cloudinary.com/ddyffgmvq/image/upload/${event.image}.jpg`, alt="ticket_image")
            hr 
        .ticket_info 
            //- if url.startsWith('/all')
            //- a.link-dark(href="/single/#{event._id}")
            a.link-dark(href=`/all/${event._id}`)
                h3= event.event_name 
            p= `Description ${event.event_description}`
            p= `Sale Ends: ${event.event_start}`
            each ticket in event.tickets 
                p= `${ticket.ticket_type.toUpperCase()} Tickets Cost:\$${ticket.ticket_cost}` 